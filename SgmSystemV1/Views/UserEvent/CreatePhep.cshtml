@using Model.ViewModel
@model UserEventCreateViewModel
@{
    ViewBag.Title = "CreatePhep";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

@section Header{
    Xin Nghỉ Phép    
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Xin Nghỉ Phép
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal" role="form">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-4 col-sm-4 control-label">
                                @Html.LabelFor(model => model.UeDateExpires)
                            </div>
                            <div class="col-md-8 col-sm-8">
                                @Html.EditorFor(model => model.UeDateExpires, new { htmlAttribute = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UeDateExpires, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-sm-4 control-label">
                                @Html.LabelFor(model => model.UeWillExpires)
                            </div>
                            <div class="col-md-8 col-sm-8">
                                @Html.EditorFor(model => model.UeWillExpires, new { htmlAttribute = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UeWillExpires, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-sm-4 control-label">
                                <label>Lý do nghỉ</label>
                            </div>
                            <div class="col-md-8 col-sm-8">
                                @Html.TextAreaFor(model => model.UeNote, new { htmlAttribute = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UeNote, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                <h5>@Html.ActionLink("Quay Lại", "IndexPhep", "UserEvent")</h5>
                            </div>
                            <div class="col-md-offset-2 col-md-4">
                                <input type="submit" value="Cập Nhật" class="btn btn-default btn-block btn-primary" id="btnSubmit" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


