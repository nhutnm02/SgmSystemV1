@using Model.ViewModel
@model IEnumerable<UsersListViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

@section Header{
    Danh Sách Nhân Viên
}

<div class="panel panel-default">
    <div class="panel-heading">
        Danh Sách Nhân Viên
    </div>
    <div class="panel-body" style="overflow:auto;">
        <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="example">
                <thead>
                    <tr>
                        <th>
                            Nhóm
                        </th>
                        <th>
                            Họ và tên /<br/>
                            Ngày Sinh
                        </th>
                        <th>
                            Địa Chỉ
                        </th>
                        <th>
                            Email <br/>
                            Di Động
                        </th>
                        <th>
                            Số Máy Nhánh
                        </th>
                        <th>
                            Ngày Vào Công Ty
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.GroupName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserFullName)<br />
                                @Html.DisplayFor(modelItem => item.UserDOB)
                            </td>  
                            <td>

                            </td>                       
                            <td>
                                @Html.DisplayFor(modelItem => item.UserEmail) <br/>
                                @Html.DisplayFor(modelItem => item.UserPhone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserExtention)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserJoinDate)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/scriptTable")
    <script src="~/Content/client/js/Controller/forTable.js"></script>
}
