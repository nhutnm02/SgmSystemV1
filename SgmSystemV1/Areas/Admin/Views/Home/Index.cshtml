@using Model.ViewModel
@model IEnumerable<UserEventAdminListViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section Header{
    Danh Sách Công Tác Chờ Duyệt    
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-male fa-female fa-fw"></i>
                Danh Sách Công Tác <br/>
                @Html.ValidationSummary(false,"",new {@class="text-danger" })
            </div>
            <div class="panel-body" style="overflow:auto;">
                <div class="dataTables_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="example">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>
                                    @Html.DisplayNameFor(m=>m.UserFullName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.UeNote)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.UeDateExpires)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.UeWillExpires)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.Loai)
                                </th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="@item.Color">
                                    <td>
                                        @if (!item.UeOk.Value)
                                        {
                                            <a href="@Url.Action("Accept", "Home", @item)" class="btn btn-primary btn-block">Duyệt</a>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-primary btn-block" disabled="disabled">Duyệt</button>
                                        }

                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => item.UserFullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UeNote)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UeDateExpires)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UeWillExpires)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Loai)
                                    </td>
                                   
                                </tr>
                             }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/scriptTable")
    <script src="~/Content/admin/js/Controller/forTable.js"></script>


}




