@using Model.ViewModel
@model UserCreateViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Header{
    Thêm Nhân Viên    
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Thêm Nhân Viên
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal" role="form">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-4 col-sm-4 control-label">
                                @Html.LabelFor(model => model.UserName)
                            </div>
                            <div class="col-md-8 col-sm-8">
                                @Html.EditorFor(model => model.UserName, new { htmlAttribute = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-sm-4 control-label">
                                @Html.LabelFor(model => model.UserFullName)
                            </div>
                            <div class="col-md-8 col-sm-8">
                                @Html.EditorFor(model => model.UserFullName, new { htmlAttribute = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserFullName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-sm-4 control-label">
                                @Html.LabelFor(model => model.UserAddress)
                            </div>
                            <div class="col-md-8 col-sm-8">
                                @Html.TextAreaFor(model => model.UserAddress, new { htmlAttribute = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserAddress, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-sm-4 control-label">
                                @Html.LabelFor(model => model.UserDOB)
                            </div>
                            <div class="col-md-8 col-sm-8">
                                @Html.EditorFor(model => model.UserDOB, new { htmlAttribute = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserDOB, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-sm-4 control-label">
                                @Html.LabelFor(model => model.UserPhone)
                            </div>
                            <div class="col-md-8 col-sm-8">
                                @Html.EditorFor(model => model.UserPhone, new { htmlAttribute = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserPhone, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-sm-4 control-label">
                                @Html.LabelFor(model => model.UserEmail)
                            </div>
                            <div class="col-md-8 col-sm-8">
                                @Html.EditorFor(model => model.UserEmail, new { htmlAttribute = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-sm-4 control-label">
                                @Html.LabelFor(model => model.UserExtention)
                            </div>
                            <div class="col-md-8 col-sm-8">
                                @Html.EditorFor(model => model.UserExtention, new { htmlAttribute = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserExtention, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-sm-4 control-label">
                                @Html.LabelFor(model => model.UserComputer)
                            </div>
                            <div class="col-md-8 col-sm-8">
                                @Html.EditorFor(model => model.UserComputer, new { htmlAttribute = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserComputer, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-sm-4 control-label">
                                @Html.LabelFor(model => model.UserJoinDate)
                            </div>
                            <div class="col-md-8 col-sm-8">
                                @Html.EditorFor(model => model.UserJoinDate, new { htmlAttribute = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserJoinDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-sm-4 control-label">
                                @Html.LabelFor(model => model.DdlGroupID)
                            </div>
                            <div class="col-md-8 col-sm-8">
                                @Html.DropDownListFor(model => model.GroupID, Model.DdlGroupID,"(Lựa Chọn)", new { htmlAttribute = new { @class = "form-control required" } })
                                @Html.ValidationMessageFor(model => model.GroupID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-sm-4 control-label">
                                @Html.LabelFor(model => model.UserStatus)
                            </div>
                            <div class="col-md-8 col-sm-8">
                                <div class="row">
                                    <div class="btn-group col-md-12" data-toggle="buttons">
                                        <label class="btn btn-success col-md-4 active">
                                            @Html.RadioButtonFor(model=> model.UserStatus, true, new { @checked = "checked"}) Kích Hoạt
                                        </label>

                                        <label class="btn btn-danger col-md-4">
                                            @Html.RadioButtonFor(model => model.UserStatus, false) Khóa
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                <h5>@Html.ActionLink("Quay Lại", "Index", "Users")</h5>
                            </div>
                            <div class="col-md-offset-2 col-md-4">
                                <input type="submit" value="Cập Nhật" class="btn btn-default btn-block btn-primary" id="btnSubmit" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>