@using Model.ViewModel
@model IEnumerable<UsersListViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@section Header{
    Danh Sách Nhân Viên
}

<p>
    <a href="@Url.Action("Create","Users",new {area = "Admin" })" class="btn btn-primary btn-lg">
        <span class="glyphicon glyphicon-plus-sign" style="font-size:15px;"></span>&nbsp;
        <strong style="font-size:18px;"> Thêm Nhân Viên</strong>
    </a>
</p>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-male fa-female fa-fw"></i>
                Danh Sách Nhân Viên
            </div>
            <div class="panel-body" style="overflow:auto;">
                <div class="dataTables_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(m => m.GroupName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.UserName)<br/>
                                    @Html.DisplayNameFor(m=>m.UserFullName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m=>m.UserEmail)<br/>
                                    @Html.DisplayNameFor(m => m.UserPhone)<br/>
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.UserDOB)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.UserComputer)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="@item.Color">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GroupName)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", new {id=item.UserID})">
                                        <h4><b>@Html.DisplayFor(modelItem => item.UserName)</b></h4></a>
                                        <br/>
                                        @Html.DisplayFor(modelItem => item.UserFullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserEmail)<br/>
                                        @Html.DisplayFor(modelItem => item.UserPhone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserDOB)
                                    </td>
                                    <td>
                                       @Html.DisplayFor(modelItem => item.UserComputer)<br/>
                                        @Html.DisplayFor(modelItem => item.UserExtention)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/scriptTable")
    <script src="~/Content/admin/js/Controller/forTable.js"></script>

    <script>
        $(document).on("click", ".MyLink", function (e) {
            {
                var link = $(this).data("url");
                var text = $(this).data("title");
                e.preventDefault;
                if (confirm("Bạn có chắc muốn xóa ?")) {
                    $.post(link);
                }
            }
        })
    </script>

}




