@using Model.ViewModel.Admin
@model LoginAdminViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLogin.cshtml";
}


<div class="login-panel panel panel-default ">
    <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-sign-in fa-fw"></i>ADMIN LOGIN</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Login", "Account", new { area = "Admin_Default"}, FormMethod.Post))
        {
            @Html.AntiForgeryToken();
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <fieldset>
                <div class="form-group">
                    @Html.EditorFor(model => model.AdminName, new { htmlAttributes = new { @class = "form-control", placeholder = "Tài Khoản" } })
                    @*@Html.ValidationMessageFor(model=>model.UserName,"",new { @class = "text-danger" })*@
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.AdminPass, new { htmlAttributes = new { @class = "form-control", placeholder = "Mật Khẩu" } })
                </div>
                <input type="submit" value="Đăng Nhập" class="btn btn-lg btn-success btn-block" />
            </fieldset>
        }
    </div>
</div>
